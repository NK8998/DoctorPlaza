<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1100" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.Patient_historyController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="🩺 MedPanel" />
            <Button fx:id="btnDashboard" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="📊 Dashboard" />
            <Button fx:id="btnPatientQueue" onAction="#handlePatientQueue" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="📍 Patient Queue" />
            <Button style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 6;" text="📋 Patient History" />
            <Button fx:id="btnAddRecord" onAction="#handleAddRecord" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="➕ Add Record" />
            <Button fx:id="btnEditRecords" onAction="#handleEditRecords" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="✏️ Edit Records" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Patient History" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #666;" text="Dr. Sarah Johnson" />
            </HBox>
            <Label style="-fx-text-fill: #666;" text="Search and view detailed patient medical histories." />

            <!-- Main Body -->
            <HBox spacing="30">
                <!-- Left: Patient Search/List -->
                <VBox prefWidth="280" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #ddd;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="🔍 Find Patient" />
                    <TextField promptText="Search by name or email..." />

                    <!-- Patient List -->
                    <VBox spacing="8">
                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-weight: bold;" text="Alice Johnson" />
                                <Label style="-fx-text-fill: #777;" text="Last visit: 2024-01-15" />
                            </VBox>
                        </Button>

                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-weight: bold;" text="Bob Smith" />
                                <Label style="-fx-text-fill: #777;" text="Last visit: 2024-01-10" />
                            </VBox>
                        </Button>

                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label style="-fx-font-weight: bold;" text="Carol Davis" />
                                <Label style="-fx-text-fill: #777;" text="Last visit: 2024-01-08" />
                            </VBox>
                        </Button>
                    </VBox>
                </VBox>

                <!-- Right: Patient Details Placeholder -->
                <VBox alignment="CENTER" prefHeight="300" prefWidth="600" spacing="10" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: #ddd;">
                    <Label style="-fx-font-size: 48px;" text="👤" />
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Select a Patient" />
                    <Label style="-fx-text-fill: #777;" text="Choose a patient from the list to view their medical history." />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
