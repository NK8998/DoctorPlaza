<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1100" prefHeight="700" fx:controller="com.example.DoctorPlaza.Frontend.doctor.Patient_historyController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;" prefWidth="200">
            <Label text="🩺 MedPanel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />
            <Button text="📊 Dashboard" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="📍 Patient Queue" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="📋 Patient History" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 6;" />
            <Button text="➕ Add Record" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="✏️ Edit Records" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Patient History" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Dr. Sarah Johnson" style="-fx-text-fill: #666;" />
            </HBox>
            <Label text="Search and view detailed patient medical histories." style="-fx-text-fill: #666;" />

            <!-- Main Body -->
            <HBox spacing="30">
                <!-- Left: Patient Search/List -->
                <VBox spacing="10" prefWidth="280" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #ddd;">
                    <Label text="🔍 Find Patient" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                    <TextField promptText="Search by name or email..." />

                    <!-- Patient List -->
                    <VBox spacing="8">
                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label text="Alice Johnson" style="-fx-font-weight: bold;" />
                                <Label text="Last visit: 2024-01-15" style="-fx-text-fill: #777;" />
                            </VBox>
                        </Button>

                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label text="Bob Smith" style="-fx-font-weight: bold;" />
                                <Label text="Last visit: 2024-01-10" style="-fx-text-fill: #777;" />
                            </VBox>
                        </Button>

                        <Button style="-fx-background-color: #f0f0f0; -fx-text-alignment: left;">
                            <VBox alignment="CENTER_LEFT">
                                <Label text="Carol Davis" style="-fx-font-weight: bold;" />
                                <Label text="Last visit: 2024-01-08" style="-fx-text-fill: #777;" />
                            </VBox>
                        </Button>
                    </VBox>
                </VBox>

                <!-- Right: Patient Details Placeholder -->
                <VBox spacing="10" alignment="CENTER" prefWidth="600" prefHeight="300"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: #ddd;">
                    <Label text="👤" style="-fx-font-size: 48px;" />
                    <Label text="Select a Patient" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="Choose a patient from the list to view their medical history." style="-fx-text-fill: #777;" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>

