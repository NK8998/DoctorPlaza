<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="750" prefWidth="1100" stylesheets="@../../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.Patient_queueController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Doctor Portal" />
            <Button fx:id="btnDashboard" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" styleClass="navbar-link" text="📊 Dashboard" />
            <Button fx:id="btnPatientQueue" onAction="#handlePatientQueue" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 4;" styleClass="navbar-link" text="📍 Patient Queue" />
            <Button fx:id="btnEditRecord" onAction="#handleEditRecords" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" styleClass="navbar-link" text="✎ Edit Records" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Patient Queue" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #666;" text="Dr. Sarah Johnson" />
            </HBox>
            <Label style="-fx-text-fill: #666;" text="Manage today's patient appointments and waiting times." />

            <!-- Queue Management Search -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #ddd;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="📍 Queue Management" />
                <HBox spacing="10">
                    <TextField fx:id="txtFilter" prefWidth="600" promptText="Search patients or reason..." />
                    <ComboBox prefWidth="150" promptText="All Patients" />
                </HBox>
            </VBox>

            <!-- Patient Cards -->
            <VBox fx:id="patientQueueContainer" spacing="15" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
</BorderPane>
