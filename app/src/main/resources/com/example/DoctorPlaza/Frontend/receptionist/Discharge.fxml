<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@../../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.DischargeController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-text-fill: #c20000; -fx-font-weight: bold; -fx-font-size: 18;" text="Receptionist" />
            <Button fx:id="btnDashboard" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="📊 Dashboard" />

<Button fx:id="btnRegister" onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="➕ Register Patient" />

<Button fx:id="btnQueue" onAction="#handleQueue" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="👥 Queue Management" />

<Button fx:id="btnDischarge" onAction="#handleDischarge" style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-border-color: #c20000; -fx-border-width: 2; -fx-border-radius: 10;" styleClass="navbar-link" text="✔ Discharge Patient" />

        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Page Header -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="👥 Discharge / Complete Visit" />
                <Label style="-fx-text-fill: #666666;" text="Mark patient visits as completed and process discharge" />
            </VBox>

            <!-- Search Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Search Patients" />
                <TextField fx:id="txtFilter" promptText="🔍 Search by patient name or doctor..." />
            </VBox>

            <!-- Today's Visits Header -->
            <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 20px; -fx-font-weight: bold;" text="Today's Visits" />
         <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="550.0" style="-fx-border-color: transparent; -fx-border-width: 0;">
            <content>
      
                  <!-- Patient Visit List -->
                  <VBox fx:id="dischargeContainer" spacing="15">
      
                      <!-- Visit Card - Ready for Discharge -->
                      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0;">
                          <VBox spacing="5" HBox.hgrow="ALWAYS">
                              <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Emma Wilson" />
                              <Label style="-fx-text-fill: #555;" text="👥 with Dr. James Wilson at 11:30 AM" />
                              <Label style="-fx-text-fill: #777;" text="Physical therapy" />
                          </VBox>
                          <Pane />
                          <HBox alignment="CENTER" spacing="10">
                              <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;" text="👥 Discharge" />
                          </HBox>
                      </HBox>
      
                      <!-- Visit Card - Another Ready for Discharge -->
                      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0;">
                          <VBox spacing="5" HBox.hgrow="ALWAYS">
                              <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Lucas Davis" />
                              <Label style="-fx-text-fill: #555;" text="👥 with Dr. Sarah Johnson at 12:00 PM" />
                              <Label style="-fx-text-fill: #777;" text="Follow-up examination" />
                          </VBox>
                          <Pane />
                          <HBox alignment="CENTER" spacing="10">
                              <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10;" text="👥 Discharge" />
                          </HBox>
                      </HBox>
                  </VBox>
            </content>
         </ScrollPane>
        </VBox>
    </center>
</BorderPane>
