<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="750" prefWidth="1100" stylesheets="@../../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.Edit_recordController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Doctor Portal" />
            <Button fx:id="btnDashboard" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" styleClass="navbar-link" text="📊 Dashboard" />
            <Button fx:id="btnPatientQueue" onAction="#handlePatientQueue" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" styleClass="navbar-link" text="📍 Patient Queue" />
            <Button fx:id="btnEditRecord" onAction="#handleEditRecord" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 4;" styleClass="navbar-link" text="✎ Edit Records" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Edit Medical Records" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #666;" text="Dr. Sarah Johnson" />
            </HBox>
            <Label style="-fx-text-fill: #666;" text="Edit your own medical records. Records by other doctors are read-only." />

                        <!-- Search Field -->
            <VBox spacing="10" style="-fx-background-color: #fefefe; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #ddd;">
                <Label style="-fx-font-weight: bold;" text="🔍 Find Records" />
                <TextField fx:id="txtFilter" promptText="Search by patient name, diagnosis, or date..." />
            <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="420.0">
               <content>
                  <VBox fx:id="recordsContainer" prefHeight="200.0" prefWidth="100.0">
                     <children>
               
                                                                                       <!-- Record Box -->
                           <VBox snapToPixel="false" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #ddd;">
                               <HBox alignment="CENTER_LEFT" spacing="10">
                                   <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Alice Johnson" />
                                   <Label style="-fx-text-fill: #666;" text="2024-01-15 " />
                                   <Pane HBox.hgrow="ALWAYS" />
                                   <Button style="-fx-background-color: #f1f1f1; -fx-border-color: #ccc; -fx-background-radius: 5;" text="✏️ Edit" />
                               </HBox>
               
                                                                                           <VBox spacing="5">
                                   <Label style="-fx-font-weight: bold;" text="Diagnosis" />
                                   <Label text="Routine Checkup" />
                               </VBox>
               
                                                                                           <VBox spacing="5">
                                   <Label style="-fx-font-weight: bold;" text="Clinical Notes" />
                                   <Label text="Patient in good health. Blood pressure normal. Recommended annual screening." wrapText="true" />
                               </VBox>
               
                                                                                           <VBox spacing="5">
                                   <Label style="-fx-font-weight: bold;" text="Medications" />
                                   <Label text="-" />
                               </VBox>
                           <VBox fx:id="editContainer" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                              <children>
                                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
                                    <children>
                                       <Label prefWidth="70.0" text="Diagnosis:" />
                                       <TextField HBox.hgrow="ALWAYS" />
                                    </children>
                                 </HBox>
                                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
                                    <children>
                                       <Label prefWidth="70.0" text="Prescription:" />
                                       <TextField HBox.hgrow="ALWAYS" />
                                    </children>
                                 </HBox>
                                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
                                    <children>
                                       <Label prefWidth="70.0" text="Follow Up:" />
                                       <TextField HBox.hgrow="ALWAYS" />
                                    </children>
                                 </HBox>
                                 <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                       <Button mnemonicParsing="false" text="Save" />
                                    </children>
                                 </HBox>
                              </children>
                           </VBox>
                           </VBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>
