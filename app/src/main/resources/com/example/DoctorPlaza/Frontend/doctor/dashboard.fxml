<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650" prefWidth="1000" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.doctor.DashboardController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="🩺 DoctorPlaza" />
            <Button style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 6;" text="📊 Dashboard" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="👥 Patient Queue" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="📋 Patient History" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="➕ Add Record" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" text="✏️ Edit Records" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Dashboard" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #666;" text="Dr. Sarah Johnson" />
            </HBox>
            <Label style="-fx-text-fill: #666;" text="Welcome back, Dr. Johnson. Here’s your overview for today." />

            <!-- Top Stats -->
            <HBox spacing="20">
                <VBox alignment="CENTER" prefWidth="160" spacing="5" style="-fx-background-color: white; -fx-border-width: 1; -fx-border-color: #ddd; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-text-fill: #555;" text="Today's Patients" />
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="12" />
                </VBox>
                <VBox alignment="CENTER" prefWidth="160" spacing="5" style="-fx-background-color: white; -fx-border-width: 1; -fx-border-color: #ddd; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-text-fill: #555;" text="Currently Waiting" />
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="3" />
                </VBox>
                <VBox alignment="CENTER" prefWidth="160" spacing="5" style="-fx-background-color: white; -fx-border-width: 1; -fx-border-color: #ddd; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-text-fill: #555;" text="Completed Visits" />
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="9" />
                </VBox>
                <VBox alignment="CENTER" prefWidth="160" spacing="5" style="-fx-background-color: white; -fx-border-width: 1; -fx-border-color: #ddd; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-text-fill: #555;" text="Avg Wait Time" />
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="15 mins" />
                </VBox>
            </HBox>

            <!-- Bottom Sections -->
            <HBox spacing="25">
                <!-- Current Queue -->
                <VBox prefWidth="400" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="👥 Current Queue" />
                    
                    <!-- Patient 1 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff5f5; -fx-padding: 10; -fx-background-radius: 6;">
                        <VBox spacing="2">
                            <Label style="-fx-font-weight: bold;" text="David Wilson" />
                            <Label style="-fx-text-fill: #777;" text="Appointment: 3:00 PM" />
                        </VBox>
                        <Pane />
                        <Label style="-fx-background-color: #e0e0e0; -fx-text-fill: black; -fx-padding: 3 8; -fx-background-radius: 10;" text="normal" />
                        <Label style="-fx-text-fill: #555;" text="5 mins" />
                    </HBox>

                    <!-- Patient 2 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff5f5; -fx-padding: 10; -fx-background-radius: 6;">
                        <VBox spacing="2">
                            <Label style="-fx-font-weight: bold;" text="Eva Martinez" />
                            <Label style="-fx-text-fill: #777;" text="Appointment: 3:30 PM" />
                        </VBox>
                        <Pane />
                        <Label style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-padding: 3 8; -fx-background-radius: 10;" text="urgent" />
                        <Label style="-fx-text-fill: #555;" text="35 mins" />
                    </HBox>
                </VBox>

                <!-- Recent Visits -->
                <VBox prefWidth="400" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="🕑 Recent Visits" />

                    <!-- Visit 1 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff5f5; -fx-padding: 10; -fx-background-radius: 6;">
                        <VBox spacing="2">
                            <Label style="-fx-font-weight: bold;" text="Alice Johnson" />
                            <Label style="-fx-text-fill: #777;" text="Routine Checkup" />
                        </VBox>
                        <Pane />
                        <Label style="-fx-text-fill: #666;" text="10:30 AM" />
                        <Label style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 3 8; -fx-background-radius: 10;" text="completed" />
                    </HBox>

                    <!-- Visit 2 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff5f5; -fx-padding: 10; -fx-background-radius: 6;">
                        <VBox spacing="2">
                            <Label style="-fx-font-weight: bold;" text="Bob Smith" />
                            <Label style="-fx-text-fill: #777;" text="Flu Symptoms" />
                        </VBox>
                        <Pane />
                        <Label style="-fx-text-fill: #666;" text="11:15 AM" />
                        <Label style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 3 8; -fx-background-radius: 10;" text="completed" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
