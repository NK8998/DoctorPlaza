<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="600" fx:controller="com.example.DoctorPlaza.Frontend.controllers.ReceptionistDashboardController">

    <!-- Left Navigation Menu -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #fff; -fx-padding: 20;" prefWidth="200">
            <Label text="Receptionist Portal" style="-fx-text-fill: #c20000; -fx-font-weight: bold;" />
            <Button fx:id="btnDashboard" text="ðŸ“Š Dashboard" 
        onAction="#handleDashboard" 
        style="-fx-text-fill: #c20000; -fx-background-color: transparent; -fx-font-size: 14px;" />

<Button fx:id="btnRegister" text="âž• Register Patient" 
        onAction="#handleRegister" 
        style="-fx-text-fill: #c20000; -fx-background-color: transparent; -fx-font-size: 14px;" />

<Button fx:id="btnQueue" text="ðŸ‘¥ Queue Management" 
        onAction="#handleQueue" 
        style="-fx-text-fill: #c20000; -fx-background-color: transparent; -fx-font-size: 14px;" />

<Button fx:id="btnDischarge" text="ðŸ§¾ Discharge Patient" 
        onAction="#handleDischarge" 
        style="-fx-text-fill: #c20000; -fx-background-color: transparent; -fx-font-size: 14px;" />

        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="5">
                <Label text="Receptionist Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                <Label text="Overview of today's activities and patient queues" style="-fx-text-fill: #666666;" />
            </VBox>

            <!-- Top Stats -->
            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints percentHeight="50"/>
                    <RowConstraints percentHeight="50"/>
                </rowConstraints>

                <StackPane style="-fx-border-color: #e53935; -fx-border-width: 2 0 0 0; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 20;" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <VBox spacing="5">
                        <Label text="Total Patients Today" style="-fx-text-fill: #666666;" />
                        <Label text="47" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </VBox>
                </StackPane>

                <StackPane style="-fx-border-color: #e53935; -fx-border-width: 2 0 0 0; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 20;" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <VBox spacing="5">
                        <Label text="Patients in Queue" style="-fx-text-fill: #666666;" />
                        <Label text="23" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </VBox>
                </StackPane>

                <StackPane style="-fx-border-color: #e53935; -fx-border-width: 2 0 0 0; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 20;" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <VBox spacing="5">
                        <Label text="Completed Visits" style="-fx-text-fill: #666666;" />
                        <Label text="24" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </VBox>
                </StackPane>

                <StackPane style="-fx-border-color: #e53935; -fx-border-width: 2 0 0 0; -fx-background-radius: 10; -fx-background-color: white; -fx-padding: 20;" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <VBox spacing="5">
                        <Label text="Appointments Today" style="-fx-text-fill: #666666;" />
                        <Label text="52" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </VBox>
                </StackPane>
            </GridPane>

            <!-- Assigned Doctors -->
            <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Label text="Assigned Doctors &amp; Their Queues" style="-fx-text-fill: #d32f2f; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <HBox spacing="20">
                    <VBox spacing="5" style="-fx-background-color: #fff; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;">
                        <Label text="Dr. Sarah Johnson" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label text="Cardiology" style="-fx-text-fill: gray;" />
                        <Label text="8 patients" style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-padding: 4 8 4 8; -fx-background-radius: 10;" />
                    </VBox>

                    <VBox spacing="5" style="-fx-background-color: #fff; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-width: 1;">
                        <Label text="Dr. Michael Chen" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label text="Pediatrics" style="-fx-text-fill: gray;" />
                        <Label text="12 patients" style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-padding: 4 8 4 8; -fx-background-radius: 10;" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
