<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="signupPane" prefHeight="600" prefWidth="900" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.SignUpController">

    <!-- Red Side Panel (Right) -->
    <right>
        <VBox alignment="CENTER" prefWidth="300" spacing="20" style="-fx-background-color: radial-gradient(center 50% 50%, radius 100%, rgba(227,64,75,1) 60%, rgba(250,65,121,1) 100%);">
            <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Sign Up now!" />
            <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Already have an account?" />
            <Button prefHeight="40" prefWidth="100" style="-fx-background-color: white; -fx-text-fill: #F24164; -fx-font-size: 14px; -fx-background-radius: 30;" text="Sign In" />
        </VBox>
    </right>

    <!-- Form Panel (Center) -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="15">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <Label style="-fx-font-size: 14px;" text="Full Name" />
            <TextField fx:id="fullNameField" promptText="Full Name" style="-fx-background-color: #F4F7FB; -fx-background-radius: 25;" />

            <Label style="-fx-font-size: 14px;" text="Email" />
            <TextField fx:id="emailField" promptText="Enter Email" style="-fx-background-color: #F4F7FB; -fx-background-radius: 25;" />

            <Label style="-fx-font-size: 14px;" text="Password" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10;" />

            <Label style="-fx-font-size: 14px;" text="Confirm Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-radius: 10;" />

            <Label style="-fx-font-size: 14px;" text="Role" />
            <ComboBox fx:id="roleComboBox" promptText="Admin or Doctor" style="-fx-background-color: #F4F7FB; -fx-background-radius: 25;" />

            <Label style="-fx-font-size: 14px;" text="Specialization" />
            <ComboBox fx:id="specializationComboBox" promptText="Select specialization" style="-fx-background-color: #F4F7FB; -fx-background-radius: 25;" />


            <Button alignment="CENTER" prefHeight="45" prefWidth="250" style="-fx-background-color: radial-gradient(center 50% 50%, radius 100%, rgba(227,64,75,1) 60%, rgba(250,65,121,1) 100%); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 30;" text="Sign Up" />
        </VBox>
    </center>
</BorderPane>
