<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="700" fx:controller="com.example.DoctorPlaza.Frontend.QueueManagementController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #f8f8f8; -fx-padding: 30;" prefWidth="220">
            <Label text="Receptionist Portal" style="-fx-text-fill: #c20000; -fx-font-weight: bold;" />
            <Button text="📊 Dashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
            <Button text="➕ Register Patient" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
            <Button text="👥 Queue Management" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-border-color: #c20000; -fx-border-width: 2; -fx-border-radius: 10;" />
            <Button text="🧾 Discharge Patient" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Title Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox>
                    <Label text="Queue Management" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                    <Label text="Manage patient queues for assigned doctors" style="-fx-text-fill: #666;" />
                </VBox>
                <Pane />
                <Label text="👥 Total in Queue: 3" style="-fx-text-fill: #d32f2f; -fx-font-weight: bold;" />
            </HBox>

            <!-- Doctor Selection -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label text="Select Doctor" style="-fx-text-fill: #d32f2f; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <ComboBox promptText="Dr. Sarah Johnson - Cardiology" />
            </VBox>

            <!-- Doctor Header -->
            <Label text="Dr. Sarah Johnson - Cardiology" style="-fx-text-fill: #d32f2f; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Queue List -->
            <VBox spacing="15">
                <!-- Patient Card 1 -->
                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <VBox spacing="5">
                        <Label text="#1" style="-fx-text-fill: #d32f2f; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="John Smith" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label text="Chest pain" style="-fx-text-fill: #666;" />
                        <Label text="⏱ Waiting: 15 min" style="-fx-text-fill: #666;" />
                    </VBox>
                    <Pane />
                    <HBox spacing="10">
                        <Label text="URGENT" style="-fx-background-color: #ef5350; -fx-text-fill: white; -fx-padding: 4 8 4 8; -fx-background-radius: 8;" />
                        <Button text="↑" style="-fx-background-radius: 50%; -fx-padding: 4;" />
                        <Button text="↓" style="-fx-background-radius: 50%; -fx-padding: 4;" />
                        <Button text="🧾" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 50%; -fx-padding: 6;" />
                    </HBox>
                </HBox>

                <!-- Patient Card 2 -->
                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                    <VBox spacing="5">
                        <Label text="#2" style="-fx-text-fill: #d32f2f; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Mary Johnson" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label text="Heart palpitations" style="-fx-text-fill: #666;" />
                        <Label text="⏱ Waiting: 25 min" style="-fx-text-fill: #666;" />
                    </VBox>
                    <Pane />
                    <HBox spacing="10">
                        <Label text="HIGH" style="-fx-background-color: #ffeb3b; -fx-text-fill: #000; -fx-padding: 4 8 4 8; -fx-background-radius: 8;" />
                        <Button text="↑" style="-fx-background-radius: 50%; -fx-padding: 4;" />
                        <Button text="↓" style="-fx-background-radius: 50%; -fx-padding: 4;" />
                        <Button text="🧾" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 50%; -fx-padding: 6;" />
                    </HBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
