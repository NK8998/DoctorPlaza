<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1200" stylesheets="@../../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.QueueManagementController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-text-fill: #c20000; -fx-font-weight: bold; -fx-font-size: 18;" text="Receptionist" />
            <Button fx:id="btnDashboard" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="📊 Dashboard" />

<Button fx:id="btnRegister" onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="➕ Register Patient" />

<Button fx:id="btnQueue" onAction="#handleQueue" style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-border-color: #c20000; -fx-border-width: 2; -fx-border-radius: 10;" styleClass="navbar-link" text="👥 Queue Management" />

<Button fx:id="btnDischarge" onAction="#handleDischarge" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="✔ Discharge Patient" />

        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Title Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox>
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Queue Management" />
                    <Label style="-fx-text-fill: #666;" text="Manage patient queues for assigned doctors" />
                </VBox>
                <Pane />
            <Label text="👥 Total Patients: " />
                <Label fx:id="lblTotalPatients" style="-fx-text-fill: #d32f2f; -fx-font-weight: bold;" />
            </HBox>

            <!-- Doctor Selection -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Select Doctor" />
                <ComboBox fx:id="assignedDoctorsComboBox" promptText="Dr. Sarah Johnson - Cardiology" />
            </VBox>

            <!-- Doctor Header -->
            <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 20px; -fx-font-weight: bold;" text="Add patients to queue" />
         <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="450.0">
            <content>
      
                  <!-- Queue List -->
                  <VBox fx:id="patientsNotInQueueContainer" spacing="15">
                      <!-- Patient Card 1 -->
                      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                          <VBox spacing="5">
                              <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 16px; -fx-font-weight: bold;" text="#1" />
                          </VBox>
                          <VBox spacing="5" HBox.hgrow="ALWAYS">
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="John Smith" />
                              <Label style="-fx-text-fill: #666;" text="Chest pain" />
                              <Label style="-fx-text-fill: #666;" text="⏱ Waiting: 15 min" />
                          </VBox>
                          <Pane />
                          <HBox alignment="CENTER" spacing="10">
                              <Button prefHeight="25.0" prefWidth="45.0" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 6;" text="Add" />
                          </HBox>
                      </HBox>
                  </VBox>
            </content>
         </ScrollPane>
        </VBox>
    </center>
</BorderPane>
