<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1100" prefHeight="750" fx:controller="com.example.DoctorPlaza.Frontend.doctor.Add_recordController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #f8f8f8; -fx-padding: 30;" prefWidth="200">
            <Label text="🩺 MedPanel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />
            <Button text="📊 Dashboard" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="📍 Patient Queue" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="📋 Patient History" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
            <Button text="➕ Add Record" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 6;" />
            <Button text="✏️ Edit Records" style="-fx-background-color: transparent; -fx-text-fill: #d32f2f;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Label text="Add Medical Record" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Dr. Sarah Johnson" style="-fx-text-fill: #666;" />
            </HBox>
            <Label text="Create a new medical record for a patient visit." style="-fx-text-fill: #666;" />

            <!-- Form Panel -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #ddd;">

                <Label text="📝 New Medical Record" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />

                <!-- First Row: Patient + Visit Date -->
                <HBox spacing="20">
                    <VBox spacing="5" prefWidth="400">
                        <Label text="Patient *" />
                        <ComboBox promptText="Select a patient" />
                    </VBox>
                    <VBox spacing="5" prefWidth="400">
                        <Label text="Visit Date *" />
                        <DatePicker />
                    </VBox>
                </HBox>

                <!-- Second Row: Diagnosis + Symptoms -->
                <HBox spacing="20">
                    <VBox spacing="5" prefWidth="400">
                        <Label text="Diagnosis *" />
                        <ComboBox promptText="Select diagnosis" />
                    </VBox>
                    <VBox spacing="5" prefWidth="400">
                        <Label text="Symptoms" />
                        <TextField promptText="e.g., Fever, cough, headache" />
                    </VBox>
                </HBox>

                <!-- Medications Prescribed -->
                <VBox spacing="5">
                    <Label text="Medications Prescribed" />
                    <HBox spacing="10">
                        <TextField promptText="Add medication (e.g., Ibuprofen 400mg)" HBox.hgrow="ALWAYS"/>
                        <Button text="➕" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 10;" />
                    </HBox>
                </VBox>

                <!-- Clinical Notes -->
                <VBox spacing="5">
                    <Label text="Clinical Notes *" />
                    <TextArea promptText="Detailed notes about the patient’s condition, examination findings, treatment plan..." prefRowCount="4"/>
                </VBox>

                <!-- Follow-up Instructions -->
                <VBox spacing="5">
                    <Label text="Follow-up Instructions" />
                    <TextArea promptText="Next appointment recommendations, when to return, what to monitor..." prefRowCount="3"/>
                </VBox>

                <!-- Save and Clear Buttons -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Save Medical Record"
                            style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                            prefWidth="200"/>
                    <Button text="Clear Form"
                            style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-border-color: #ccc; -fx-background-radius: 8;"
                            prefWidth="100"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>

