<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1100" prefHeight="700"
            fx:controller="com.example.DoctorPlaza.Frontend.PendingApprovalsController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #fff; -fx-padding: 20;" prefWidth="220">
            <Label text="Admin Portal" style="-fx-text-fill: #c20000; -fx-font-weight: bold;" />

            <Button text="🧭 Admin Dashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" />

            <Button text="⏳ Pending Approvals"
                    style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" />

            <Button text="👥 User Management"
                    style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" />

            <Button text="🔄 Assign Receptionist"
                    style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Header Row -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Pending Approvals" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                    <Label text="Review and approve user registration requests" style="-fx-text-fill: #666;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="4 Pending"
                       style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-padding: 4 12 4 12; -fx-background-radius: 20;" />
            </HBox>

            <!-- Search Bar -->
            <TextField promptText="Search by name, email, or role..."
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 10;" />

            <!-- User Card 1 -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: #f24153; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <StackPane prefWidth="50" prefHeight="50" style="-fx-background-color: #f24153; -fx-background-radius: 25;">
                        <Label text="DJ" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    </StackPane>
                    <VBox spacing="3">
                        <Label text="Dr. Sarah Johnson" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <HBox spacing="5">
                            <Label text="Doctor" style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 2 6;" />
                            <Label text="high priority" style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 2 6;" />
                        </HBox>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="2024-01-15" style="-fx-text-fill: gray;" />
                </HBox>

                <GridPane hgap="30" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    <Label text="📧 sarah.j@hospital.com" GridPane.columnIndex="0" />
                    <Label text="📞 +1 (555) 123-4567" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="📍 New York General Hospital" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Specialization: Cardiology" GridPane.columnIndex="1"/>
                    <Label text="Documents: Medical License, ID Copy" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="✔ Approve" style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="✘ Reject" style="-fx-background-color: #f77b82; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="View Details" />
                </HBox>
            </VBox>

            <!-- User Card 2 -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <StackPane prefWidth="50" prefHeight="50" style="-fx-background-color: #cddc39; -fx-background-radius: 25;">
                        <Label text="MC" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    </StackPane>
                    <VBox spacing="3">
                        <Label text="Mike Chen" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <HBox spacing="5">
                            <Label text="Receptionist" style="-fx-background-color: lightgray; -fx-text-fill: black; -fx-background-radius: 8; -fx-padding: 2 6;" />
                            <Label text="medium priority" style="-fx-background-color: lightgray; -fx-text-fill: black; -fx-background-radius: 8; -fx-padding: 2 6;" />
                        </HBox>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="2024-01-14" style="-fx-text-fill: gray;" />
                </HBox>

                <GridPane hgap="30" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    <Label text="📧 mike.c@clinic.com" GridPane.columnIndex="0" />
                    <Label text="📞 +1 (555) 234-5678" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="📍 Downtown Medical Center" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Department: Front Desk" GridPane.columnIndex="1"/>
                    <Label text="Documents: Background Check, References" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="✔ Approve" style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="✘ Reject" style="-fx-background-color: #f77b82; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Button text="View Details" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
