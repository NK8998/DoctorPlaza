<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1100" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.AssignReceptionistController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" style="-fx-background-color: #fff; -fx-padding: 20;">
            <Label style="-fx-text-fill: #c20000; -fx-font-weight: bold;" text="Admin Portal" />
            <Label style="-fx-text-fill: #999;" text="Healthcare Management System" />

            <Button fx:id="btnAdminDashboard" onAction="#handleAdminDashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="ðŸ“Š Dashboard" />

            <Button fx:id="btnPendingApprovals" onAction="#handlePendingApprovals" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="â³ Pending Approvals" />

            <Button fx:id="btnUserManagement" onAction="#handleUserManagement" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="ðŸ‘¥ User Management" />

            <Button fx:id="btnAssignReceptionist" onAction="#handleAssignReceptionist" style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="âž• Assign Receptionist" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Assign Receptionist" />
                <Label style="-fx-text-fill: #666;" text="Manage receptionist assignments to doctors" />
            </VBox>

            <!-- Quick Assignment Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #c20000;" text="âž• Quick Assignment" />
                <Label style="-fx-text-fill: #777;" text="Assign a receptionist to a doctor quickly" />

                <HBox spacing="20">
                    <VBox spacing="5">
                        <Label text="Select Doctor" />
                        <ComboBox prefWidth="300" promptText="Choose a doctor" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Select Receptionist" />
                        <ComboBox prefWidth="300" promptText="Choose a receptionist" />
                    </VBox>
                </HBox>

                <Button style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 14px; -fx-background-radius: 10;" text="ðŸ”— Assign Receptionist" />
            </VBox>

            <!-- Search Bar -->
            <TextField promptText="Search doctors..." style="-fx-background-radius: 10; -fx-padding: 10;" />

            <!-- Doctor Assignment Section -->
            <VBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Doctor Assignments" />
                <Label style="-fx-text-fill: #777;" text="Current receptionist assignments for doctors" />

                <!-- Assignment Card -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-padding: 15;">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <StackPane prefHeight="50" prefWidth="50" style="-fx-background-color: #f24153; -fx-background-radius: 25;">
                            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="DJ" />
                        </StackPane>
                        <VBox spacing="2">
                            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Dr. Sarah Johnson" />
                            <Label style="-fx-text-fill: #777;" text="Cardiology" />
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-padding: 4 8 4 8; -fx-background-radius: 10;" text="high workload" />
                        <Label style="-fx-text-fill: #666;" text="45 patients" />
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
