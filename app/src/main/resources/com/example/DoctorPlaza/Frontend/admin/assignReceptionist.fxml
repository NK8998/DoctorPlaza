<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700" prefWidth="1100" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.AssignReceptionistController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" style="-fx-background-color: #fff; -fx-padding: 20;">
            <Label style="-fx-text-fill: #c20000; -fx-font-weight: bold;" text="Admin Portal" />

            <Button fx:id="btnAdminDashboard" onAction="#handleAdminDashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="📊 Dashboard" />

            <Button fx:id="btnPendingApprovals" onAction="#handlePendingApprovals" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="⏳ Pending Approvals" />

            <Button fx:id="btnUserManagement" onAction="#handleUserManagement" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-font-size: 14px;" text="👥 User Management" />

            <Button fx:id="btnAssignReceptionist" onAction="#handleAssignReceptionist" style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="➕ Assign Receptionist" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Assign Receptionist" />
                <Label style="-fx-text-fill: #666;" text="Manage receptionist assignments to doctors" />
            </VBox>

            <!-- Quick Assignment Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #c20000;" text="➕ Quick Assignment" />
                <Label style="-fx-text-fill: #777;" text="Assign a receptionist to a doctor quickly" />
            <HBox prefHeight="550.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Pick A Doctor: " HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="8.0" />
                           </padding>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="550.0">
                           <content>
                              <VBox fx:id="doctorsContainer" spacing="10.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-font-weight: bold;" text="Assign Receptionist:" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="8.0" />
                           </padding>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="550.0">
                           <content>
                              <VBox fx:id="receptionistsContainer" spacing="10.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </HBox>

                <Button fx:id="btnAssignReceptionist" onAction="#onAssignReceptionist" style="-fx-background-color: #f24153; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 14px; -fx-background-radius: 10;" text="🔗 Assign Receptionist" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
