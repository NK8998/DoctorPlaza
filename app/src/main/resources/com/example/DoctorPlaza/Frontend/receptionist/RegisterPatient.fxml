<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="1200" stylesheets="@../../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DoctorPlaza.Frontend.controllers.RegisterPatientController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" style="-fx-background-color: #f8f8f8; -fx-padding: 30;">
            <Label style="-fx-text-fill: #c20000; -fx-font-weight: bold; -fx-font-size: 18;" text="Receptionist" />
            <Button onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="📊 Dashboard" />
            <Button style="-fx-background-color: #c20000; -fx-text-fill: white; -fx-border-color: #c20000; -fx-border-width: 2; -fx-border-radius: 10;" styleClass="navbar-link" text="➕ Register Patient" />
            <Button onAction="#handleQueue" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="👥 Queue Management" />
            <Button onAction="#handleDischarge" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" styleClass="navbar-link" text="✔ Discharge Patient" />
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 18px; -fx-text-fill: #c20000; -fx-font-weight: bold;" text="📋 Medical Receptionist" />
                <Pane />
                <Label style="-fx-text-fill: #777;" text="Welcome, Receptionist" />
            </HBox>

            <!-- Title -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="➕ Register New Patient" />
                <Label style="-fx-text-fill: #666666;" text="Enter patient information to add them to the queue" />
            </VBox>

            <!-- Patient Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label style="-fx-text-fill: #d32f2f; -fx-font-size: 20px; -fx-font-weight: bold;" text="Patient Information" />

                <!-- Full Name and Age -->
                <HBox spacing="20">
                    <VBox prefWidth="300" spacing="5">
                        <Label text="Full Name *" />
                        <TextField fx:id="txtFullName" promptText="Enter patient's full name" />
                    </VBox>
                    <VBox prefWidth="150" spacing="5">
                        <Label text="Age *" />
                        <TextField fx:id="txtAge" promptText="Enter age" />
                    </VBox>
                </HBox>

                <!-- Phone Number -->
                <VBox spacing="5">
                    <Label text="Phone Number *" />
                    <TextField fx:id="txtPhone" promptText="Enter phone number" />
                </VBox>

                <!-- Billing Address -->
                <VBox spacing="5">
                    <Label text="Billing Address" />
                    <TextArea fx:id="txtBilling" prefRowCount="2" promptText="Enter billing address" />
                </VBox>

                <!-- Symptoms -->
                <VBox spacing="5">
                    <Label text="Symptoms / Reason for Visit" />
                    <TextArea fx:id="txtSymptoms" prefRowCount="3" promptText="Describe symptoms or reason for visit" />
                </VBox>

                <!-- Register Button -->
                <HBox alignment="CENTER">
                    <Button fx:id="btnRegisterPatient" maxWidth="200" onAction="#onRegisterPatient" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20 10 20; -fx-background-radius: 12;" text="📝  Register Patient" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
