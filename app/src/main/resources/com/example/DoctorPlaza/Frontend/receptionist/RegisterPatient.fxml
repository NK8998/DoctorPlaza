<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="700" fx:controller="com.example.DoctorPlaza.Frontend.RegisterPatientController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #f8f8f8; -fx-padding: 30;" prefWidth="220">
            <Label text="Receptionist Portal" style="-fx-text-fill: #c20000; -fx-font-weight: bold;" />
            <Button text="📊 Dashboard" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
            <Button text="➕ Register Patient" style="-fx-background-color: transparent; -fx-text-fill: #c20000; -fx-border-color: #c20000; -fx-border-width: 2; -fx-border-radius: 10;" />
            <Button text="👥 Queue Management" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
            <Button text="🧾 Discharge Patient" style="-fx-background-color: transparent; -fx-text-fill: #c20000;" />
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="📋 Medical Receptionist" style="-fx-font-size: 18px; -fx-text-fill: #c20000; -fx-font-weight: bold;" />
                <Pane />
                <Label text="Welcome, Receptionist" style="-fx-text-fill: #777;" />
            </HBox>

            <!-- Title -->
            <VBox spacing="5">
                <Label text="➕ Register New Patient" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                <Label text="Enter patient information to add them to the queue" style="-fx-text-fill: #666666;" />
            </VBox>

            <!-- Patient Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label text="Patient Information" style="-fx-text-fill: #d32f2f; -fx-font-size: 20px; -fx-font-weight: bold;" />

                <!-- Full Name and Age -->
                <HBox spacing="20">
                    <VBox spacing="5" prefWidth="300">
                        <Label text="Full Name *" />
                        <TextField promptText="Enter patient's full name" />
                    </VBox>
                    <VBox spacing="5" prefWidth="150">
                        <Label text="Age *" />
                        <TextField promptText="Enter age" />
                    </VBox>
                </HBox>

                <!-- Phone Number -->
                <VBox spacing="5">
                    <Label text="Phone Number *" />
                    <TextField promptText="Enter phone number" />
                </VBox>

                <!-- Billing Address -->
                <VBox spacing="5">
                    <Label text="Billing Address" />
                    <TextArea promptText="Enter billing address" prefRowCount="2" />
                </VBox>

                <!-- Priority Level -->
                <VBox spacing="5">
                    <Label text="Priority Level" />
                    <ComboBox promptText="Select priority level" />
                </VBox>

                <!-- Symptoms -->
                <VBox spacing="5">
                    <Label text="Symptoms / Reason for Visit" />
                    <TextArea promptText="Describe symptoms or reason for visit" prefRowCount="3" />
                </VBox>

                <!-- Register Button -->
                <HBox alignment="CENTER">
                    <Button text="📝  Register Patient"
                            style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20 10 20; -fx-background-radius: 12;"
                            maxWidth="200"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
